{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "node", //--> this is for lit-html and lit-element
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": true
}
